{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "StatementForNonAuroraRDS",
        "Effect": "Deny",
        "Action": [
          "rds:CreateDBInstance"
        ],
        "Resource": [
          "*"
        ],
        "Condition": {
          "ForAnyValue:StringNotLike": {
            "rds:DatabaseEngine": "aurora*"
          },
          "Bool": {
            "rds:StorageEncrypted": "false"
          }
        }
      },
      {
        "Sid": "StatementForAurora",
        "Effect": "Deny",
        "Action": [
          "rds:CreateDBCluster"
        ],
        "Resource": [
          "*"
        ],
        "Condition": {
          "Bool": {
            "rds:StorageEncrypted": "false"
          }
        }
      }
    ]
  }